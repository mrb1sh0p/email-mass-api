{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "sourceMap": true
  },
  "include": ["src/**/*", "__test__"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/__tests__/**",
  ]
}